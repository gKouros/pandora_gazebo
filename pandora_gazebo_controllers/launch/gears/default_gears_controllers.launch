<launch>
    
<!-- ###################################################################### -->
  
  <!-- Joint State -->
  <rosparam command="load" ns="/"
            file="$(find pandora_gazebo_controllers)/config/gears/default_controllers/default_joint_state_controller.yaml" />
  
  <!-- Laser -->
  <rosparam command="load" ns="/"
            file="$(find pandora_gazebo_controllers)/config/gears/default_controllers/default_laser_controllers.yaml" />
  
  <!-- Kinect -->
  <rosparam command="load" ns="/"
            file="$(find pandora_gazebo_controllers)/config/gears/default_controllers/default_kinect_controllers.yaml" />
  
  <!-- Linear Elevator -->
  <rosparam command="load" ns="/"
            file="$(find pandora_gazebo_controllers)/config/gears/default_controllers/default_linear_elevator_controller.yaml" />
  
  <!-- Linear Head -->
  <rosparam command="load" ns="/"
            file="$(find pandora_gazebo_controllers)/config/gears/default_controllers/default_linear_head_controllers.yaml" />
  
  <!-- Robot Wheels -->
  <rosparam command="load" ns="/"
            file="$(find pandora_gazebo_controllers)/config/gears/default_controllers/default_gears_wheel_controllers.yaml" />
    
<!-- ###################################################################### -->
  
  <!-- Load the controllers -->
  <node name="controller_spawner" 
        pkg="controller_manager" type="controller_manager" respawn="false" output="screen" ns="/" 
        args="spawn
              joint_state_controller
              laser_roll_controller
              laser_pitch_controller
              kinect_pitch_controller
              kinect_yaw_controller
              linear_elevator_controller
              linear_head_pitch_controller
              linear_head_yaw_controller
              gears_left_front_wheel_controller
              gears_left_rear_wheel_controller
              gears_right_front_wheel_controller
              gears_right_rear_wheel_controller" />
    
<!-- ###################################################################### -->
              
</launch>
