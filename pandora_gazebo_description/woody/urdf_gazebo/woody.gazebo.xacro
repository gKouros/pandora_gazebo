<?xml version="1.0"?>

<robot name="woody"
       xmlns:xacro="http://ros.org/wiki/xacro" >

  <!-- Import Files -->
  <xacro:include filename="$(find pandora_robots_description)/woody/urdf/woody.urdf.xacro" />

  <xacro:include filename="$(find pandora_gazebo_description)/woody/urdf_gazebo/sdf_configurations.xacro" />
  <xacro:include filename="$(find pandora_gazebo_description)/woody/urdf_gazebo/references.gazebo.xacro" />

  <xacro:include filename="$(find pandora_gazebo_description)/sdf_elements/sensors/*.gazebo.xacro" />
  <xacro:include filename="$(find pandora_gazebo_description)/sdf_elements/plugins/*.gazebo.xacro" />

  <!-- Load URDF -->
  <xacro:woody_urdf />

  <!-- Load gazebo sensors -->
  <xacro:if value="${enable_laser}" >
    <xacro:laser_sensor range="${laser_range}" />
  </xacro:if>
  <xacro:if value="${enable_kinect}" >
    <xacro:kinect_sensor />
  </xacro:if>
  <xacro:if value="${enable_thermal}" >
    <xacro:thermal_sensor />
  </xacro:if>
  <xacro:if value="${enable_webcam}" >
    <xacro:webcam_sensor prefix_y="left" />
    <xacro:webcam_sensor prefix_y="right" />
  </xacro:if>
  <xacro:if value="${enable_sonar}" >
    <xacro:sonar_sensor name="left" />
    <xacro:sonar_sensor name="right" />
  </xacro:if>
  <xacro:if value="${enable_co2}" >
    <xacro:co2_sensor />
  </xacro:if>
  <xacro:if value="${enable_temperature}" >
    <xacro:temperature_sensor prefix_y="middle" />
  </xacro:if>
  <xacro:if value="${enable_microphone}" >
    <xacro:microphone_sensor />
  </xacro:if>

  <!-- Load Plugins -->
  <xacro:gazebo_ros_control interface="pandora_gazebo_interface/WoodyGazeboInterface" />
  <xacro:pandora_differential />
  <xacro:pandora_p3d />
  <xacro:if value="$(arg tune)" >
    <xacro:pandora_wheel_physics />
    <!--<xacro:pandora_fdir />-->
  </xacro:if>

</robot>
