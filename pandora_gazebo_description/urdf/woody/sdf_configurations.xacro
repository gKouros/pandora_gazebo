<?xml version="1.0"?>

<robot xmlns:xacro="http://ros.org/wiki/xacro" >

<!-- Robot NameSpace ###################################################### -->

  <!-- ==================================================================== -->
  <xacro:property name="robot_namespace" value="" />
  <!-- ==================================================================== -->

<!-- Elements' Status ##################################################### -->

  <!-- Robot ============================================================== -->
  <xacro:property name="static_robot" value="false" />
  <!-- ==================================================================== -->
  
  <!-- Model Sensors ====================================================== -->
   <!-- FIXME: Remove all model properties (should be set in URDF) -->
  <xacro:property name="enable_sensors" value="true" />
    <xacro:property name="enable_laser_sensor" value="true" />
    <xacro:property name="enable_kinect_sensor" value="true" />
    <xacro:property name="enable_camera_sensors" value="true" />
      <xacro:property name="enable_left_camera_sensor" value="true" />
      <xacro:property name="enable_right_camera_sensor" value="true" />
    <xacro:property name="enable_sonar_sensors" value="true" />
      <xacro:property name="enable_left_sonar_sensor" value="true" />
      <xacro:property name="enable_right_sonar_sensor" value="true" />
    <xacro:property name="enable_thermal_sensor" value="true" />
    <xacro:property name="enable_co2_sensor" value="true" />
    <xacro:property name="enable_microphone_sensor" value="false" />
      
  <!-- Gazebo Sensors ===================================================== -->
  <xacro:property name="enable_gazebo_sensors" value="true" />
    <!-- ================================================================== -->
    <xacro:property name="enable_laser_gazebo_sensor" value="true" />
    <!-- ================================================================== -->
    <xacro:property name="enable_kinect_gazebo_sensor" value="true" />
    <!-- ================================================================== -->
    <xacro:property name="enable_camera_gazebo_sensors" value="true" />
      <xacro:property name="enable_left_camera_gazebo_sensor" value="true" />
      <xacro:property name="enable_right_camera_gazebo_sensor" value="true" />
    <!-- ================================================================== -->
    <xacro:property name="enable_sonar_gazebo_sensors" value="true" />
      <xacro:property name="enable_left_sonar_gazebo_sensor" value="true" />
      <xacro:property name="enable_right_sonar_gazebo_sensor" value="true" />
    <!-- ================================================================== -->
    <xacro:property name="enable_thermal_gazebo_sensor" value="true" />
    <!-- ================================================================== -->
    <xacro:property name="enable_co2_gazebo_sensor" value="true" />
    <!-- ================================================================== -->
    <xacro:property name="enable_microphone_gazebo_sensor" value="false" />
  <!-- ==================================================================== -->
  
  <!-- Physics ============================================================ -->
  <xacro:property name="enable_gazebo_physics" value="true" />
  
    <!-- Links ============================================================ -->
    <xacro:property name="enable_wheel_link_physics" value="true" />
    <!-- ================================================================== -->
    
    <!-- Joints =========================================================== -->
    <xacro:property name="enable_side_joint_physics" value="false" />
    <!-- ================================================================== -->
    <xacro:property name="enable_wheel_joint_physics" value="false" />
    <!-- ================================================================== -->
    <xacro:property name="enable_laser_roll_joint_physics" value="false" />
    <xacro:property name="enable_laser_pitch_joint_physics" value="false" />
    <!-- ================================================================== -->
    <xacro:property name="enable_kinect_pitch_joint_physics" value="false" />
    <xacro:property name="enable_kinect_yaw_joint_physics" value="false" />
  <!-- ==================================================================== -->
    
  <!-- Plugins ============================================================ -->
  <xacro:property name="enable_plugins" value="true" />
    <!-- ================================================================== -->
    <xacro:property name="enable_pandora_differential_plugin" value="true" />
    <!-- ================================================================== -->
    <xacro:property name="enable_pandora_p3d_plugin" value="false" />
    <!-- ================================================================== -->
    <xacro:property name="enable_pandora_imu_stabilizer_plugin" value="false" />
    <!-- ================================================================== -->
    <xacro:property name="enable_ros_imu_plugin" value="false" />
    <!-- ================================================================== -->
    <xacro:property name="enable_ros_skid_steer_drive_plugin" value="true" />
  <!-- ==================================================================== -->

<!-- Joint Physics ######################################################## -->

  <!-- Wheels ============================================================= -->
  <xacro:property name="wheel_mu_1" value="0.75" /> <!-- FIXME -->
  <xacro:property name="wheel_mu_2" value="0.75" /> <!-- FIXME -->
  <xacro:property name="wheel_k_p" value="1000000.0" />
  <xacro:property name="wheel_k_d" value="1.0" />
  <xacro:property name="wheel_min_depth" value="0.001" />
  <xacro:property name="wheel_max_contacts" value="10" />
  <!-- ==================================================================== -->

<!-- Plugin Parameters #################################################### -->
  
  <!-- Skid Steer Drive =================================================== -->
  <xacro:property name="wheel_joint_max_torque" value="5" /> <!-- FIXME -->
  <!-- ==================================================================== -->

<!-- ###################################################################### -->

</robot>
